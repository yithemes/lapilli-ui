{
	"compilerOptions": {
		"target": "esnext",
		"lib": [
			"dom",
			"esnext"
		],
		"baseUrl": ".",
		"allowJs": true,
		"checkJs": true,
		"allowSyntheticDefaultImports": true,
		"jsx": "react",
		"module": "commonjs",
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": true,
		"isolatedModules": true,
		"strict": true,
		"composite": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"importsNotUsedAsValues": "error",
		"moduleResolution": "node",
		"esModuleInterop": false,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"types": [
			"react",
			"node",
			"react-dom"
		],
		"typeRoots": [
			"../../node_modules/@types"
		],
		"rootDir": "./",
		"skipLibCheck": true,
		"strictNullChecks": true,
		"paths": {
			"@lapilli-ui/block-editor": [
				"../block-editor/src"
			],
			"@lapilli-ui/components": [
				"../components/src"
			],
			"@lapilli-ui/date": [
				"../date/src"
			],
			"@lapilli-ui/styles": [
				"../styles/src"
			]
		}
	},
	"exclude": [
		"**/*.android.js",
		"**/*.ios.js",
		"**/*.native.js",
		"**/benchmark",
		"**/build-*",
		"*+/build/",
		"**/node_modules",
		"**/test/**",
		"packages/**/react-native-*/**"
	]
}
