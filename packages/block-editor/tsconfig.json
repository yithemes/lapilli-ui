{
	"extends": "@yith/tsconfig/react-library.json",
	"include": [
		"src/*",
		"src/**/*"
	],
	"exclude": [
		"dist",
		"build",
		"build-module",
		"build-types",
		"node_modules"
	],
	"compilerOptions": {
		"jsx": "react",
		"rootDir": "src",
		"outDir": "build-module",
		"declarationDir": "build-types",
		"paths": {
			"@yith/styles": [
				"../styles"
			]
		}
	}
}
